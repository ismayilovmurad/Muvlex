<resources>

    <!-- Base application theme. -->
    <style name="Theme.Muvlex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_background</item>
        <item name="colorPrimaryVariant">@color/color_background</item>
        <item name="colorOnPrimary">@color/color_supreme_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_on_background</item>
        <item name="colorSecondaryVariant">@color/color_background</item>
        <item name="colorOnSecondary">@color/color_regular_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="colorControlNormal">@color/color_regular_text</item>
    </style>

    <style name="StyleSupremeImageView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StyleRegularImageView">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="StyleSupremeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textColor">@color/color_supreme_text</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="StyleRegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_regular_text</item>
    </style>

    <style name="StyleSeparatorView">
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_regular_text</item>
    </style>

    <style name="StyleRegularEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_supreme_text</item>
        <item name="android:textColorHint">@color/color_regular_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="StyleSupremeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_background</item>
        <item name="android:backgroundTint">@color/color_supreme_action</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleActionTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_supreme_text</item>
    </style>

    <style name="StyleSupremeProgressbar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_background</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="StyleDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/color_background</item>
    </style>

</resources>
