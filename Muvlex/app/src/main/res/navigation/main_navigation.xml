<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.martiandeveloper.muvlex.view.main.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splashFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.LogInFragment"
        android:label="LogInFragment"
        tools:layout="@layout/fragment_log_in">

        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />

        <action
            android:id="@+id/action_logInFragment_to_signUpUsernameFragment"
            app:destination="@id/signUpUsernameFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_logInFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_logInFragment_to_getHelpLoggingInFragment"
            app:destination="@id/getHelpFragment" />

    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/action_signUpFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_signUpFragment_to_signUpUsernameFragment"
            app:destination="@id/signUpUsernameFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/getHelpFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.GetHelpFragment"
        android:label="GetHelpFragment"
        tools:layout="@layout/fragment_get_help">

        <action
            android:id="@+id/action_getHelpFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/signUpUsernameFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.SignUpUsernameFragment"
        android:label="SignUpUsernameFragment"
        tools:layout="@layout/fragment_sign_up_username">

        <action
            android:id="@+id/action_signUpUsernameFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/signUpUsernameFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_signUpUsernameFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment" />

    </fragment>

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.PrivacyPolicyFragment"
        android:label="PrivacyPolicyFragment"
        tools:layout="@layout/fragment_privacy_policy" />

</navigation>
