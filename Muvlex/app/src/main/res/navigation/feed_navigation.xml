<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_feed"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />

    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_exploreFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

        <action
            android:id="@+id/action_exploreFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_rateSeriesFragment"
            app:destination="@id/rateSeriesFragment" />

    </fragment>

    <fragment
        android:id="@+id/rateSeriesFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.RateSeriesFragment"
        android:label="RateSeriesFragment"
        tools:layout="@layout/fragment_rate_series">

        <argument
            android:name="series"
            app:argType="com.martiandeveloper.muvlex.model.Series" />

    </fragment>

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.martiandeveloper.muvlex.view.authentication.PrivacyPolicyFragment"
        android:label="PrivacyPolicyFragment"
        tools:layout="@layout/fragment_privacy_policy" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.EditProfileFragment"
        android:label="EditProfileFragment"
        tools:layout="@layout/fragment_edit_profile" />

</navigation>
