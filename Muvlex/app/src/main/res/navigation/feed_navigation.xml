<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_feed"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />

    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_exploreFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

        <action
            android:id="@+id/action_exploreFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_rateMovieFragment"
            app:destination="@id/rateMovieFragment" />

        <action
            android:id="@+id/action_searchFragment_to_rateSeriesFragment"
            app:destination="@id/rateSeriesFragment" />

        <action
            android:id="@+id/action_searchFragment_to_userFragment"
            app:destination="@id/userFragment" />

    </fragment>

    <fragment
        android:id="@+id/rateMovieFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.RateMovieFragment"
        android:label="RateMovieFragment"
        tools:layout="@layout/fragment_rate_movie">

        <argument
            android:name="genreIds"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="originalLanguage"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="originalTitle"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="overview"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="posterPath"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="releaseDate"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="title"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="voteAverage"
            android:defaultValue="unknown"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/rateSeriesFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.RateSeriesFragment"
        android:label="RateSeriesFragment"
        tools:layout="@layout/activity_write_series_review">

        <argument
            android:name="genreIds"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="originalLanguage"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="originalName"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="overview"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="posterPath"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="firstAirDate"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="name"
            android:defaultValue="unknown"
            app:argType="string" />

        <argument
            android:name="voteAverage"
            android:defaultValue="unknown"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.martiandeveloper.muvlex.view.feed.UserFragment"
        android:label="UserFragment"
        tools:layout="@layout/fragment_user" >
        <argument
            android:name="user_id"
            android:defaultValue="none" />
    </fragment>

</navigation>
