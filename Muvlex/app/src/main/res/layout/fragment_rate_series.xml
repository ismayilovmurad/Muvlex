<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rateSeriesViewModel"
            type="com.martiandeveloper.muvlex.viewmodel.feed.RateSeriesViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".view.feed.RateSeriesFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/fragment_rate_series_mainMTB"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@color/color_background"
                android:elevation="0dp"
                app:title="@{rateSeriesViewModel.name}"
                app:titleTextColor="@color/color_supreme_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="92dp"
                    android:layout_height="139dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/fragment_rate_series_posterIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/poster" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/calendar"
                            app:srcCompat="@drawable/ic_calendar" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/StyleRegularTextView"
                            android:layout_marginStart="8dp"
                            android:text="@{rateSeriesViewModel.firstAirDate}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/vote_average"
                            app:srcCompat="@drawable/ic_vote_average" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/StyleRegularTextView"
                            android:layout_marginStart="8dp"
                            android:text="@{rateSeriesViewModel.voteAverage}" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_on_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularTextView"
                    android:text="@string/rate_this_series"
                    android:textColor="@color/color_supreme_text"
                    android:textSize="16sp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularTextView"
                    android:layout_marginTop="2dp"
                    android:text="@string/share_your_thoughts_with_other"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/fragment_rate_series_mainRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/color_on_background"
                    android:progressTint="@color/color_supreme_action"
                    android:secondaryProgressTint="@color/color_on_background"
                    android:stepSize=".5" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularTextView"
                    android:layout_marginTop="8dp"
                    android:text="@string/write_a_review"
                    android:textColor="@color/color_regular_action" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_on_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/genre"
                        app:srcCompat="@drawable/ic_genre" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/StyleRegularTextView"
                        android:layout_marginStart="8dp"
                        android:text="@{rateSeriesViewModel.genre}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/language"
                        app:srcCompat="@drawable/ic_language" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/StyleRegularTextView"
                        android:layout_marginStart="8dp"
                        android:text="@{rateSeriesViewModel.language}" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularTextView"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="@string/overview"
                    android:textColor="@color/color_supreme_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularTextView"
                    android:layout_marginTop="8dp"
                    android:text="@{rateSeriesViewModel.overview}"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>
