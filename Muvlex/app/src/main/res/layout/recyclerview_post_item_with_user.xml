<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="rating"
            type="Float" />

        <variable
            name="time"
            type="String" />

        <variable
            name="review"
            type="String" />

        <variable
            name="username"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp">

        <View
            android:id="@+id/recyclerview_post_item_with_user_mainV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_on_background"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/recyclerview_post_item_with_user_userLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_post_item_with_user_mainV">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/recyclerview_post_item_with_user_pictureIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/profile_picture" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleRegularMaterialTextView"
                android:layout_marginStart="4dp"
                android:text="@{username}"
                android:textColor="@color/color_regular_action"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recyclerview_post_item_with_user_mainLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/recyclerview_post_item_with_user_posterCV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_post_item_with_user_userLL">

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleRegularMaterialTextView"
                android:text="@{title}"
                android:textColor="@color/color_supreme_text"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/color_rating_secondary"
                    android:progressTint="@color/color_rating"
                    android:rating="@{rating}"
                    android:secondaryProgressTint="@color/color_rating_secondary"
                    android:stepSize=".5" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularMaterialTextView"
                    android:layout_marginStart="8dp"
                    android:text="@{time}"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleRegularMaterialTextView"
                android:layout_marginTop="16dp"
                android:text="@{review}" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/recyclerview_post_item_with_user_posterCV"
            android:layout_width="61dp"
            android:layout_height="92dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerview_post_item_with_user_mainLL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recyclerview_post_item_with_user_mainLL">

            <ImageView
                android:id="@+id/recyclerview_post_item_with_user_posterIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/poster" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
