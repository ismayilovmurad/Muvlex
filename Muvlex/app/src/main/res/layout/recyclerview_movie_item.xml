<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="releaseDate"
            type="String" />

        <variable
            name="voteAverage"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="46dp"
            android:layout_height="69.5dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/recyclerview_movie_item_posterIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/poster" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleSupremeMaterialTextView"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{title}"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularMaterialTextView"
                    android:layout_marginStart="2dp"
                    android:text="@{releaseDate}"
                    android:textSize="13sp" />

                <ImageView
                    style="@style/StyleRegularImageView"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/star"
                    android:src="@drawable/ic_star" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/StyleRegularMaterialTextView"
                    android:layout_marginStart="2dp"
                    android:text="@{voteAverage}" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
