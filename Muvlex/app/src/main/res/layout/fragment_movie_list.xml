<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="movieListViewModel"
            type="com.martiandeveloper.muvlex.viewmodel.feed.MovieListViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:context=".view.feed.MovieListFragment">

        <LinearLayout
            android:id="@+id/fragment_movie_list_searchingForLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="@{movieListViewModel.isSearchingForLayoutGone() ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar style="@style/StyleSupremeProgressbar" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleRegularTextView"
                android:layout_marginStart="4dp"
                android:text="@{movieListViewModel.searchingForText}" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            style="@style/StyleRegularTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/no_internet_connection"
            android:visibility="@{movieListViewModel.isNoInternetTVGone() ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/StyleRegularTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{movieListViewModel.noResultsFoundText}"
            android:visibility="@{movieListViewModel.isNoResultsFoundTVGone() ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_movie_list_mainRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{movieListViewModel.isMovieListGone() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/fragment_movie_list_searchingForLL_2"
            app:layout_constraintTop_toBottomOf="@+id/fragment_movie_list_searchingForLL" />

        <LinearLayout
            android:id="@+id/fragment_movie_list_searchingForLL_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="@{movieListViewModel.isSearchingForLayoutGone2() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ProgressBar style="@style/StyleSupremeProgressbar" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/StyleRegularTextView"
                android:layout_marginStart="4dp"
                android:text="@{movieListViewModel.searchingForText}" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
