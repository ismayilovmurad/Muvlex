<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.martiandeveloper.muvlex.viewmodel.feed.UserViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.feed.UserActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/activity_user_mainMTB"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/color_background"
            android:elevation="0dp"
            app:title="@{viewModel.username}"
            app:titleTextColor="@color/color_supreme_text" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/recyclerview_movie_item_posterIV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/poster" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:baselineAligned="false"
                        android:weightSum="3"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_userImageCV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragment_profile_userImageCV"
                        app:layout_constraintTop_toTopOf="@id/fragment_profile_userImageCV">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@{viewModel.posts}"
                                android:textColor="@color/color_supreme_text"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@string/posts"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@{viewModel.followers}"
                                android:textColor="@color/color_supreme_text"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@string/followers"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@{viewModel.following}"
                                android:textColor="@color/color_supreme_text"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/StyleRegularMaterialTextView"
                                android:text="@string/following"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/StyleSupremeMaterialButton"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:onClick="@{()->viewModel.onFollowMBTNClick()}"
                    android:text="@{viewModel.followMBTNText}" />



            </LinearLayout>

        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_user_mainRB"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</layout>
