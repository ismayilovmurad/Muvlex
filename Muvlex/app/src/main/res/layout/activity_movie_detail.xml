<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.martiandeveloper.muvlex.viewmodel.feed.MovieDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.feed.MovieDetailActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/activity_movie_detail_mainMTB"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/color_background"
            android:elevation="0dp"
            android:visibility="@{viewModel.mainMTBGone ? View.GONE : View.VISIBLE}"
            app:title="@{viewModel.title}"
            app:titleTextColor="@color/color_supreme_text" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/activity_movie_detail_mainFCV"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true" />

    </LinearLayout>

</layout>
